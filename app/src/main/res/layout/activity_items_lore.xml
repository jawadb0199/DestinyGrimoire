<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    tools:context=".ItemsLoreActivity"
    android:id="@+id/itemsLoreActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/optionsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:minHeight="40dp">

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/themeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:switchPadding="5dp"
                android:layoutDirection="rtl"
                android:text="Light Theme"
                android:onClick="toggleTheme"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Items"
            android:textSize="40sp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:textStyle="normal"
            android:textColor="@color/lightBorderAccent"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="7dp">

                    <ImageButton
                        android:id="@+id/exotic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@drawable/light_border"
                        android:cropToPadding="false"
                        android:onClick="openPages"
                        android:scaleType="fitCenter"
                        android:src="@drawable/exotic"
                        android:tag="exotic" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/exotic"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="false"
                        android:layout_centerVertical="false"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="0.1"/>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/lightBorderAccent"/>

                            <TextView
                                android:id="@+id/exoticText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:singleLine="true"
                                android:text="Exotic"
                                android:textAlignment="center"
                                android:textSize="20sp"
                                android:textStyle="normal"
                                android:textColor="@color/lightBorderAccent"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/lightBorderAccent"/>

                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="0.1"/>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp">

                    <ImageButton
                        android:id="@+id/weapons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@drawable/light_border"
                        android:cropToPadding="false"
                        android:onClick="openPages"
                        android:scaleType="fitCenter"
                        android:src="@drawable/weapons"
                        android:tag="weapons" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/weapons"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="false"
                        android:layout_centerVertical="false"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="0.1"/>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/lightBorderAccent"/>

                            <TextView
                                android:id="@+id/weaponsText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:singleLine="true"
                                android:text="Weapons"
                                android:textAlignment="center"
                                android:textSize="20sp"
                                android:textStyle="normal"
                                android:textColor="@color/lightBorderAccent"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/lightBorderAccent"/>

                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="0.1"/>

                    </LinearLayout>
                </RelativeLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp">

                    <ImageButton
                        android:id="@+id/armor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@drawable/light_border"
                        android:cropToPadding="false"
                        android:onClick="openPages"
                        android:scaleType="fitCenter"
                        android:src="@drawable/armor"
                        android:tag="armor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/armor"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="false"
                        android:layout_centerVertical="false"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="0.1"/>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/lightBorderAccent"/>

                            <TextView
                                android:id="@+id/armorText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:singleLine="true"
                                android:text="Armor"
                                android:textAlignment="center"
                                android:textSize="20sp"
                                android:textStyle="normal"
                                android:textColor="@color/lightBorderAccent"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/lightBorderAccent"/>

                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="0.1"/>

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp">

                    <ImageButton
                        android:id="@+id/equipment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@drawable/light_border"
                        android:cropToPadding="false"
                        android:onClick="openPages"
                        android:scaleType="fitCenter"
                        android:src="@drawable/equipment"
                        android:tag="equipment" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/equipment"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="false"
                        android:layout_centerVertical="false"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="0.1"/>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/lightBorderAccent"/>

                            <TextView
                                android:id="@+id/equipmentText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:singleLine="true"
                                android:text="Equipment"
                                android:textAlignment="center"
                                android:textSize="20sp"
                                android:textStyle="normal"
                                android:textColor="@color/lightBorderAccent"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/lightBorderAccent"/>

                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="0.1"/>

                    </LinearLayout>
                </RelativeLayout>
            </TableRow>

        </TableLayout>

    </LinearLayout>




</android.support.constraint.ConstraintLayout>
